<style>
    #div1 {
        display: flex;
        align-items: center;
        flex-direction: row;
        width: 100%;
        background-color: black;
        height:65px;
        color: white;
        line-height: 65px;
        position: fixed;
        top: 0;
        z-index: 20;
    }
    button:focus {
        outline:none !important;
    }
    #div1>a {
        color: inherit;
        text-decoration: none;
        display: flex;
        flex-direction: row;   
    }
    button>a {
        color: inherit;
        text-decoration: none;
    }
    button>a:hover {
        color: inherit;
        text-decoration: none;
    }
</style>
<div id='div1'>
    <a href="/"><img src='/pic1.png' height="65" width="65" style="position:fixed;top:0;" /></a>
    <font class="hidden-xs" face="Impact" size="10" style="position:fixed;margin-left: 80px;">MUSIC SOFT</font>
    <% if(typeof data=='undefined'&&typeof login=='undefined'){ %>
        <div style="margin-left: auto;">
            <button type="button" id="loginbtn" class="btn btn-success" style="margin-right: 20px;">Login</button>
            <button type="button" id="signupbtn" class="btn btn-danger" style="margin-right: 20px;">SignUp</button>
        </div>
    <% } else{ %>
        <div style="margin-left: auto;">
            <button type="button" id="logoutbtn" class="btn btn-success" style="margin-right: 20px;"><a href="/logout">SignOut</a></button>
        </div>
    <% } %>
</div>
<script>
    <% if(typeof data=='undefined'&&typeof login == 'undefined'){ %>
        var loginbtn=document.getElementById("loginbtn");
        loginbtn.onclick=()=>{
            document.getElementById('id01').style.display="block";	
        }
    <% } %>
    <% if(typeof data=='undefined'&&typeof login == 'undefined'){ %>
        var signupbtn=document.getElementById("signupbtn");
        signupbtn.onclick=()=>{
            document.getElementById('id02').style.display="block";
        }
    <% } %>
</script>